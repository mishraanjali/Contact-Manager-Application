{{#view App.DraggableView}}

    <div {{bindAttr class=":contact-profile :pane editMode:scaleout:flipin"}}>
        <div class="tools aright">
            <button {{bindAttr class=":icon-arrow-left :blue :fleft :btn-mobile"}} {{action "closeUserWithTransition" target="view"}}></button>
            <button {{bindAttr class=":icon-trashcan :red deleteMode:active"}} {{action "delete"}} title="delete"></button>
            {{#link-to 'contact.edit' }}<button {{bindAttr class=":icon-pencil editMode:active"}} title="edit"></button>{{/link-to}}
        </div>

        {{confirm-box action="confirmDelete" param=contact isVisible=deleteMode}}

        
        <h3>{{fname}} {{lname}}</h3>
        <address>mobno</address>
        <address>{{email}}</address>
        <p class="addr">{{addr}}</p>
        <p class="note">{{note}}</p>
        
        {{partial faces}}
    </div>
    
{{/view}}

{{outlet}}
